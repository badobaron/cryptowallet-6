html

  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"
    title Cryptowallet
    meta name="description" content="Experiment on cryptocurrency platform interface"
    meta name="author" content="Caê Penna"
    meta name="keywords" content="Cryptocurrency"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    meta name="referrer" content="origin"
    link rel="icon" type="image/png" href="./images/favicon.png"

    link href="./style/style.css" rel="stylesheet" type='text/css'

  body

    header.cw-header
      .logo
      .profile
        .name
        .avatar

    main

      section.section-purchase
        h1.title Compre
        h5 Escolha uma criptomoeda para comprar
        select
          option Rolecoin
          option Bitcoin
          option Memecoin
          option 9coin
        h5 Quanto? (em R$)
        input type="text" placeholder="0.00"
        h4 <em>0.00</em> Rolecoins.
        button.cw-button Comprar

      section.section-marketcap
        h1.title Acompanhe
        ul.coin-list
          li.coin-item.-head
            .name Criptomoeda
            .price Preço (em R$)
            .change Variação (24h)
          li.coin-item
            .name Rolecoin
            .price 23543.02
            .change.-positive 1.45%
          li.coin-item
            .name Bitcoin
            .price 17673.67
            .change.-positive 12.13%
          li.coin-item
            .name Memecoin
            .price 3310.73
            .change.-negative -5.44%
          li.coin-item
            .name 9coin
            .price 161.26
            .change.-positive 3.02%
